# General Configuration
project_name = "tc4"
environment  = "dev"
aws_region   = "us-east-1"

# Common Tags
common_tags = {
  Project     = "TC4"
  Environment = "dev"
  Terraform   = "true"
}

log_level = "INFO"

# RDS Configuration
rds_db_username = "postgres"
rds_db_password = "postgres"

# SQS Configuration
sqs_queues = {
  "order_queue" = {
    name                        = "order-status-updated"
    delay_seconds               = 0
    message_retention_seconds   = 1209600 # 14 days
    visibility_timeout_seconds  = 60
    fifo_queue                  = false
    content_based_deduplication = false
    tags = {
      Purpose = "Order Notifications"
    }
  }
  "kitchen_queue" = {
    name                        = "kitchen-status-updated"
    delay_seconds               = 0
    message_retention_seconds   = 1209600 # 14 days
    visibility_timeout_seconds  = 60
    fifo_queue                  = false
    content_based_deduplication = false
    tags = {
      Purpose = "Kitchen Notifications"
    }
  }
}

# Customer Service Configuration
customer_project_name = "tc4-customer-service"

# Payment Service Configuration
payment_project_name = "tc4-payment-service"

# DynamoDB Configuration
dynamodb_billing_mode         = "PAY_PER_REQUEST"  # FREE TIER FRIENDLY
dynamodb_read_capacity        = 5
dynamodb_write_capacity       = 5
dynamodb_gsi_read_capacity    = 5
dynamodb_gsi_write_capacity   = 5
dynamodb_enable_pitr          = true
dynamodb_enable_encryption    = true

# Payment Service DynamoDB Configuration
payment_dynamodb_billing_mode         = "PAY_PER_REQUEST"  # FREE TIER FRIENDLY
payment_dynamodb_read_capacity        = 5
payment_dynamodb_write_capacity       = 5
payment_dynamodb_gsi_read_capacity    = 5
payment_dynamodb_gsi_write_capacity   = 5
payment_dynamodb_enable_pitr          = true
payment_dynamodb_enable_encryption    = true

# Lambda Configuration (FREE TIER)
lambda_memory    = 128  # MINIMUM for free tier
lambda_timeout   = 15   # REDUCED timeout

# Application Configuration
jwt_secret = "your-jwt-secret-key"
